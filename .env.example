# Solar Mining Controller - Configuration
# Copy this file to .env and fill in your values

# Language Settings (CLI output language)
# Supported: en (English), de (German)
LANGUAGE=en

# Excavator Miner
EXCAVATOR_PATH=H:\miner\excavator.exe
EXCAVATOR_API_HOST=127.0.0.1
EXCAVATOR_API_PORT=3456

# Huawei Inverter
INVERTER_HOST=192.168.18.206
INVERTER_PORT=6607

# GPU Settings
DEVICE_ID=0
ALGORITHM=daggerhashimoto
STRATUM_URL=nhmp-ssl.eu.nicehash.com:443

# NiceHash Wallet (deine Bitcoin-Adresse.worker_name)
NICEHASH_WALLET=YOUR_WALLET_ADDRESS.worker_name

# Wetter-Koordinaten (f√ºr Solar-Korrelation)
# Los Nietos, Cartagena, Spanien
WEATHER_LATITUDE=37.6931
WEATHER_LONGITUDE=-0.8481
WEATHER_ENABLED=True

# Power Thresholds (Watt)
MIN_POWER_TO_START=200
MIN_POWER_TO_KEEP=150
CHECK_INTERVAL=30
ALARM_CHECK_INTERVAL=5

# Hysterese
START_CONFIRMATIONS_NEEDED=3
STOP_CONFIRMATIONS_NEEDED=5

# GPU Monitoring
GPU_CHECK_ENABLED=True
GPU_USAGE_THRESHOLD=10

# Auto-Update Settings
# AUTO_UPDATE_EXCAVATOR_STOP: If True, automatically stops Excavator when update is available, 
#                              performs update, then script will restart it on next check.
#                              If False, update is skipped when Excavator is running.
AUTO_UPDATE_EXCAVATOR_STOP=False

# AUTO_UPDATE_FORCE_STABLE: If True, downgrades prerelease versions (beta/rc) of huawei-solar 
#                           to latest stable compatible version. If False, keeps prereleases.
AUTO_UPDATE_FORCE_STABLE=False

